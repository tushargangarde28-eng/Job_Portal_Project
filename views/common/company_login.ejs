<%- include("navbar.ejs") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        
        <!-- Gradient Header -->
        <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #4e73df, #1cc88a);">
          <h4 class="mb-0">
            <i class="bi bi-building me-2"></i> Company Login
          </h4>
        </div>
        
        <!-- Card Body -->
        <div class="card-body p-5">
          <form action="/company/login" method="POST">

            <div class="mb-4 position-relative">
              <label for="email" class="form-label fw-semibold">Email</label>
              <input type="email" class="form-control ps-5" id="email" name="hr_email" placeholder="Enter your email" required>
              <i class="bi bi-envelope position-absolute" style="top: 38px; left: 15px; color: #6c757d;"></i>
            </div>

            <div class="mb-4 position-relative">
              <label for="password" class="form-label fw-semibold">Password</label>
              <input type="password" class="form-control ps-5" id="password" name="hr_password" placeholder="Enter your password" required>
              <i class="bi bi-lock position-absolute" style="top: 38px; left: 15px; color: #6c757d;"></i>
            </div>

            <div class="d-grid mt-3">
              <button type="submit" class="btn btn-success btn-lg shadow-sm">Login</button>
            </div>

            <div class="text-center mt-3">
              <a href="/company_register" class="btn btn-link btn-sm">Don't have an account? Register</a>
            </div>

          </form>
        </div>

      </div>
    </div>
  </div>
</div>

