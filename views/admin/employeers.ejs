<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Employees | Admin Panel</title>

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

  <style>
    body {
      background-color: #f5f7fb;
      font-family: 'Poppins', sans-serif;
    }

    .content {
      margin-left: 260px;
      padding: 40px;
      transition: all 0.3s ease;
    }

    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
      flex-wrap: wrap;
      gap: 15px;
    }

    .page-header h3 {
      font-weight: 600;
      color: #222;
    }

    .btn-add {
      border-radius: 10px;
      padding: 10px 18px;
      font-weight: 500;
    }

    /* Employee Cards */
    .employee-card {
      border: none;
      border-radius: 16px;
      background: #fff;
      box-shadow: 0 4px 16px rgba(0,0,0,0.08);
      transition: all 0.3s ease;
      overflow: hidden;
      height: 100%;
    }

    .employee-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 22px rgba(0,0,0,0.12);
    }

    .employee-header {
      background: linear-gradient(135deg, #007bff, #00b4d8);
      color: #fff;
      text-align: center;
      padding: 25px 20px;
    }

    .employee-avatar {
      width: 90px;
      height: 90px;
      border-radius: 50%;
      border: 3px solid #fff;
      object-fit: cover;
      margin-bottom: 10px;
      background: #fff;
      box-shadow: 0 0 0 3px rgba(255,255,255,0.4);
    }

    .employee-body {
      text-align: center;
      padding: 20px 20px 25px;
    }

    .employee-body h5 {
      font-weight: 600;
      margin-bottom: 8px;
      color: #222;
    }

    .employee-body p {
      color: #555;
      font-size: 0.9rem;
      margin-bottom: 4px;
    }

    /* Status Badge */
    .status-badge {
      border-radius: 20px;
      padding: 5px 14px;
      font-size: 0.8rem;
      font-weight: 500;
      display: inline-block;
      margin-top: 8px;
    }

    .status-active {
      background: #d4f8d4;
      color: #1e7d32;
    }

    .status-inactive {
      background: #f1f1f1;
      color: #777;
    }

    /* Action Buttons */
    .employee-actions {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-top: 15px;
    }

    .btn-action {
      border-radius: 8px;
      font-size: 0.85rem;
      padding: 6px 12px;
      transition: all 0.2s ease;
    }

    .btn-action:hover {
      transform: scale(1.08);
    }

    /* Responsive */
    @media (max-width: 992px) {
      .content {
        margin-left: 0;
        padding: 25px;
      }
    }

    @media (max-width: 768px) {
      .employee-header {
        padding: 20px 15px;
      }
      .employee-avatar {
        width: 80px;
        height: 80px;
      }
      .employee-body {
        padding: 15px;
      }
    }

    @media (max-width: 576px) {
      .page-header {
        flex-direction: column;
        text-align: center;
      }

      .btn-add {
        position: fixed;
        bottom: 25px;
        right: 25px;
        border-radius: 50%;
        padding: 14px 16px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
      }

      .btn-add i {
        margin: 0;
      }
    }
  </style>
</head>

<body>
  <%- include('slider.ejs') %>

  <div class="content">
    <div class="page-header">
      <h3><i class="fa fa-users text-primary me-2"></i> Manage Employees</h3>
      <a href="/admin/add_employee" class="btn btn-primary btn-add">
        <i class="fa fa-plus me-2"></i> Add Employee
      </a>
    </div>

    <div class="row g-4">
      <% for (var i = 0; i < employees.length; i++) { %>
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="employee-card">
            <div class="employee-header">
              <img 
                src="<%= employees[i].profile_photo && employees[i].profile_photo.trim() !== '' 
                  ? '/employee_profile/' + employees[i].profile_photo 
                  : 'https://www.iconpacks.net/icons/2/free-user-icon-3296-thumb.png' %>" 
                alt="Profile" 
                class="employee-avatar"
              >
              <h5><%= employees[i].employee_name %></h5>
              <p><i class="fa fa-briefcase me-1"></i> <%= employees[i].current_designation || 'Not specified' %></p>
            </div>

            <div class="employee-body">
              <p><i class="fa fa-envelope text-primary me-2"></i><%= employees[i].employee_email %></p>
              <p><i class="fa fa-phone text-success me-2"></i><%= employees[i].employee_mobile %></p>

              <% if (employees[i].status === 'Active') { %>
                <span class="status-badge status-active">Active</span>
              <% } else { %>
                <span class="status-badge status-inactive">Inactive</span>
              <% } %>

              <div class="employee-actions">
                <a href="/admin/view_employee/<%- employees[i].employee_id %>" class="btn btn-info text-white btn-action" title="View">
                  <i class="fa fa-eye"></i>
                </a>
                <a href="/admin/edit_employee/<%- employees[i].employee_id %>" class="btn btn-warning text-white btn-action" title="Edit">
                  <i class="fa fa-edit"></i>
                </a>
                <button class="btn btn-danger btn-action" title="Delete" onclick="confirmDelete('<%- employees[i].employee_id %>')">
                  <i class="fa fa-trash"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    function confirmDelete(id) {
      if (confirm("Are you sure you want to delete this employee?")) {
        window.location.href = '/admin/delete_employee/' + id;
      }
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
