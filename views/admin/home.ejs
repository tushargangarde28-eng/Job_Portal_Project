<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard | Job Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Poppins', sans-serif;
    }
    .sidebar {
      height: 100vh;
      background: #343a40;
      color: #fff;
      position: fixed;
      width: 250px;
      top: 0;
      left: 0;
      padding: 20px 0;
    }
    .sidebar a {
      color: #adb5bd;
      text-decoration: none;
      display: block;
      padding: 12px 25px;
      transition: 0.3s;
    }
    .sidebar a:hover {
      background-color: #495057;
      color: #fff;
    }
    .content {
      margin-left: 250px;
      padding: 30px;
    }
    .card {
      border: none;
      border-radius: 12px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }
    .card h4 {
      font-size: 1.2rem;
      color: #6c757d;
    }
    .card h2 {
      font-weight: 700;
    }
    .chart-container {
      background: #fff;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }
  </style>
</head>
<body>
<%- include('slider.ejs') %>
  <!-- Main Content -->
  <div class="content">
    <h2 class="mb-4">Dashboard Overview</h2>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <h4>Total Jobs</h4>
          <h2 id="totalJobs"><%= jobs[0].total_jobs %></h2>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <h4>Total Companies</h4>
          <h2 id="totalCompanies"><%= company[0].total_companies %></h2>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <h4>Total Employees</h4>
          <h2 id="totalEmployees"><%= employee[0].total_employees %></h2>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <h4>Applications</h4>
          <h2 id="totalApplications"><%= applications[0].total_applications %></h2>
        </div>
      </div>
    </div>

    <!-- Charts -->
    <div class="row g-4">
      <div class="col-md-6">
        <div class="chart-container">
          <h5>Jobs Posted per Month</h5>
          <canvas id="jobsChart"></canvas>
        </div>
      </div>
      <div class="col-md-6">
        <div class="chart-container">
          <h5>Applications Trend</h5>
          <canvas id="applicationsChart"></canvas>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Jobs Chart
    new Chart(document.getElementById('jobsChart'), {
      type: 'bar',
      data: {
        labels: ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct'],
        datasets: [{
          label: 'Jobs Posted',
          data: [12, 9, 14, 8, 20, 17, 23, 19, 21, 25],
          backgroundColor: '#007bff'
        }]
      },
      options: {
        scales: {
          y: { beginAtZero: true }
        }
      }
    });

    // Applications Chart
    new Chart(document.getElementById('applicationsChart'), {
      type: 'line',
      data: {
        labels: ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct'],
        datasets: [{
          label: 'Applications',
          data: [50, 80, 60, 120, 150, 130, 180, 170, 190, 210],
          fill: true,
          borderColor: '#28a745',
          tension: 0.3,
          backgroundColor: 'rgba(40,167,69,0.2)'
        }]
      },
      options: {
        scales: {
          y: { beginAtZero: true }
        }
      }
    });
  </script>

</body>
</html>
