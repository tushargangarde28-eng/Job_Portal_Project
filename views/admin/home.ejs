<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard | Job Portal</title>

  <!-- Bootstrap & Chart.js -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Poppins', sans-serif;
    }

    /* Sidebar */
    .sidebar {
      height: 100vh;
      background: #343a40;
      color: #fff;
      position: fixed;
      width: 250px;
      top: 0;
      left: 0;
      padding: 20px 0;
      transition: all 0.3s ease;
      z-index: 1000;
    }

    .sidebar a {
      color: #adb5bd;
      text-decoration: none;
      display: block;
      padding: 12px 25px;
      transition: 0.3s;
    }

    .sidebar a:hover {
      background-color: #495057;
      color: #fff;
    }

    .sidebar .toggle-btn {
      display: none;
      position: absolute;
      top: 15px;
      right: -45px;
      background-color: #343a40;
      border: none;
      color: #fff;
      font-size: 20px;
      padding: 10px;
      border-radius: 5px;
      z-index: 1100;
    }

    /* Main content */
    .content {
      margin-left: 250px;
      padding: 30px;
      transition: all 0.3s ease;
    }

    /* Stats cards */
    .card {
      border: none;
      border-radius: 12px;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }

    .card h4 {
      font-size: 1rem;
      color: #6c757d;
    }

    .card h2 {
      font-weight: 700;
      color: #212529;
    }

    /* Chart section */
    .chart-container {
      background: #fff;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }

    /* Responsive design */
    @media (max-width: 992px) {
      .sidebar {
        left: -250px;
      }

      .sidebar.active {
        left: 0;
      }

      .sidebar .toggle-btn {
        display: block;
      }

      .content {
        margin-left: 0;
        padding: 20px;
      }

      .card h2 {
        font-size: 1.5rem;
      }

      .chart-container {
        padding: 15px;
      }
    }
  </style>
</head>

<body>
<%- include("slider.ejs") %>
  <!-- Main Content -->
  <div class="content">
    <h2 class="mb-4 fw-bold"><i class="fa fa-chart-line me-2 text-primary"></i>Dashboard Overview</h2>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
      <div class="col-6 col-md-3">
        <div class="card p-3 text-center">
          <h4>Total Jobs</h4>
          <h2><%= jobs[0].total_jobs %></h2>
        </div>
      </div>
      <div class="col-6 col-md-3">
        <div class="card p-3 text-center">
          <h4>Total Companies</h4>
          <h2><%= company[0].total_companies %></h2>
        </div>
      </div>
      <div class="col-6 col-md-3">
        <div class="card p-3 text-center">
          <h4>Total Employees</h4>
          <h2><%= employee[0].total_employees %></h2>
        </div>
      </div>
      <div class="col-6 col-md-3">
        <div class="card p-3 text-center">
          <h4>Applications</h4>
          <h2><%= applications[0].total_applications %></h2>
        </div>
      </div>
    </div>

    <!-- Charts -->
    <div class="row g-4">
      <div class="col-md-6">
        <div class="chart-container">
          <h5><i class="fa fa-briefcase me-2 text-primary"></i>Jobs Posted per Month</h5>
          <canvas id="jobsChart"></canvas>
        </div>
      </div>
      <div class="col-md-6">
        <div class="chart-container">
          <h5><i class="fa fa-chart-line me-2 text-success"></i>Applications Trend</h5>
          <canvas id="applicationsChart"></canvas>
        </div>
      </div>
    </div>
  </div>

  <!-- Chart.js -->
  <script>
    function toggleSidebar() {
      document.getElementById("sidebar").classList.toggle("active");
    }

    new Chart(document.getElementById('jobsChart'), {
      type: 'bar',
      data: {
        labels: ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct'],
        datasets: [{
          label: 'Jobs Posted',
          data: [12, 9, 14, 8, 20, 17, 23, 19, 21, 25],
          backgroundColor: '#007bff'
        }]
      },
      options: { scales: { y: { beginAtZero: true } } }
    });

    new Chart(document.getElementById('applicationsChart'), {
      type: 'line',
      data: {
        labels: ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct'],
        datasets: [{
          label: 'Applications',
          data: [50, 80, 60, 120, 150, 130, 180, 170, 190, 210],
          fill: true,
          borderColor: '#28a745',
          tension: 0.3,
          backgroundColor: 'rgba(40,167,69,0.2)'
        }]
      },
      options: { scales: { y: { beginAtZero: true } } }
    });
  </script>
</body>
</html>
