<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Employee Details | Admin Panel</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8fafc;
      font-family: 'Poppins', sans-serif;
    }

    .content {
      margin-left: 260px;
      padding: 40px;
      transition: all 0.3s ease;
    }

    @media (max-width: 992px) {
      .content {
        margin-left: 0;
        padding: 20px;
      }
    }

    .card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 6px 12px rgba(0,0,0,0.08);
    }

    .profile-img {
  width: 160px;
  height: 160px;
  border-radius: 50%;
  object-fit: cover;
  border: 4px solid #007bff;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.profile-img:hover {
  transform: scale(1.05);
  box-shadow: 0 8px 20px rgba(0, 123, 255, 0.2);
}


    .section-title {
      font-weight: 600;
      color: #007bff;
      border-bottom: 2px solid #e0e0e0;
      padding-bottom: 6px;
      margin-bottom: 18px;
      display: flex;
      align-items: center;
      font-size: 1.1rem;
    }

    .info-label {
      font-weight: 500;
      color: #444;
    }

    .badge-skill {
      background: #007bff;
      color: #fff;
      margin: 4px;
      padding: 8px 14px;
      border-radius: 10px;
      display: inline-block;
      font-size: 0.9rem;
    }

    /* Mobile tweaks */
    @media (max-width: 768px) {
      h3 {
        font-size: 1.25rem;
      }

      .profile-img {
        width: 100px;
        height: 100px;
      }

      .card {
        padding: 1rem !important;
      }

      .section-title {
        font-size: 1rem;
      }

      .info-label {
        font-size: 0.95rem;
      }
    }
  </style>
</head>
<body>

  <%- include('slider.ejs') %>

  <div class="content">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
      <h3 class="mb-2 mb-md-0"><i class="fa fa-user-circle text-primary me-2"></i> Employee Details</h3>
      <a href="/admin/employeers" class="btn btn-outline-secondary btn-sm px-3">
        <i class="fa fa-arrow-left me-1"></i> Back
      </a>
    </div>

<!-- Profile Section -->
<div class="card mb-4 p-4">
  <div class="row align-items-center">
    <!-- Profile Image -->
    <div class="col-md-3 text-center mb-3 mb-md-0">
      <img 
        src="<%= employee[0].profile_photo && employee[0].profile_photo.trim() !== '' 
          ? '/employee_profile/' + employee[0].profile_photo 
          : 'https://www.iconpacks.net/icons/2/free-user-icon-3296-thumb.png' %>" 
        alt="Profile" 
        class="profile-img shadow-sm"
      >
    </div>

    <!-- Profile Info -->
    <div class="col-md-9 text-center text-md-start">
      <h3 class="fw-semibold mb-1"><%= employee[0].employee_name %></h3>
      <p class="mb-1 text-muted">
        <i class="fa fa-briefcase me-1 text-primary"></i>
        <%= employee[0].current_designation || 'Not Available' %>
      </p>
      <p class="mb-1 text-muted">
        <i class="fa fa-envelope me-1 text-danger"></i>
        <%= employee[0].employee_email %>
      </p>
      <p class="mb-0 text-muted">
        <i class="fa fa-phone me-1 text-success"></i>
        +91 <%= employee[0].employee_mobile %>
      </p>
    </div>
  </div>
</div>

    <!-- Personal Details -->
    <div class="card mb-4 p-4">
      <h5 class="section-title"><i class="fa fa-id-card me-2"></i> Personal Information</h5>
      <div class="row g-3">
        <div class="col-md-4"><span class="info-label">Gender:</span> <%= employee[0].gender %></div>
        <div class="col-md-4"><span class="info-label">Date of Birth:</span> <%= employee[0].employee_dob %></div>
        <div class="col-md-4"><span class="info-label">Marital Status:</span> <%= employee[0].maritial_status %></div>
        <div class="col-md-6"><span class="info-label">Address:</span> <%= employee[0].employee_address %>, <%= employee[0].employee_pincode %></div>
        <div class="col-md-3"><span class="info-label">Alternate Mobile:</span> <%= employee[0].alternate_mobile || '—' %></div>
        <div class="col-md-3"><span class="info-label">Languages Known:</span> <%= employee[0].language_known %></div>
      </div>
    </div>

    <!-- Career Details -->
    <div class="card mb-4 p-4">
      <h5 class="section-title"><i class="fa fa-briefcase me-2"></i> Career Details</h5>
      <div class="row g-3">
        <div class="col-md-4"><span class="info-label">Experience:</span> <%= employee[0].experience_year %> years</div>
        <div class="col-md-4"><span class="info-label">Current Salary:</span> ₹<%= employee[0].current_salary %></div>
        <div class="col-md-4"><span class="info-label">Expected Salary:</span> ₹<%= employee[0].expected_salary %></div>
        <div class="col-md-4"><span class="info-label">Preferred Job Type:</span> <%= employee[0].preferred_job_type %></div>
        <div class="col-md-4"><span class="info-label">Preferred Locations:</span> <%= employee[0].preferred_locations %></div>
        <div class="col-12"><span class="info-label">Skills Summary:</span> <%= employee[0].skills_summary %></div>
      </div>
    </div>

    <!-- Education -->
    <div class="card mb-4 p-4">
      <h5 class="section-title"><i class="fa fa-graduation-cap me-2"></i> Education</h5>
      <% if (education && education.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-striped table-bordered align-middle text-center">
            <thead class="table-primary">
              <tr>
                <th>College Name</th>
                <th>Course</th>
                <th>Passing Year</th>
                <th>Marks (%)</th>
              </tr>
            </thead>
            <tbody>
              <% education.forEach(e => { %>
                <tr>
                  <td><%= e.college_name %></td>
                  <td><%= e.course_title %></td>
                  <td><%= e.passing_year %></td>
                  <td><%= e.marks %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-muted mb-0">No education details available.</p>
      <% } %>
    </div>

    <!-- Skills -->
    <div class="card mb-4 p-4">
      <h5 class="section-title"><i class="fa fa-lightbulb me-2"></i> Skills</h5>
      <% if (skills && skills.length > 0) { %>
        <% skills.forEach(skill => { %>
          <span class="badge-skill"><%= skill.skill_name %></span>
        <% }) %>
      <% } else { %>
        <p class="text-muted mb-0">No skills added.</p>
      <% } %>
    </div>

    <!-- Links -->
    <div class="card mb-4 p-4">
      <h5 class="section-title"><i class="fa fa-link me-2"></i> Links & Resume</h5>
      <div class="row g-3">
        <div class="col-md-4"><i class="fa-brands fa-linkedin text-primary me-2"></i> <a href="<%= employee[0].linkdin_url %>" target="_blank">LinkedIn</a></div>
        <div class="col-md-4"><i class="fa-brands fa-github text-dark me-2"></i> <a href="<%= employee[0].github_url %>" target="_blank">GitHub</a></div>
        <div class="col-md-4"><i class="fa fa-globe text-success me-2"></i> <a href="<%= employee[0].portfolio_url %>" target="_blank">Portfolio</a></div>
        <div class="col-12 mt-3">
          <a href="<%= '/employee_resume/' + employee[0].employee_resume %>" target="_blank" class="btn btn-outline-primary btn-sm px-3">
            <i class="fa fa-file-pdf me-2"></i> View Resume
          </a>
        </div>
      </div>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
