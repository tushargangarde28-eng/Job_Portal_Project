<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Companies | Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f5f7fb;
      font-family: 'Poppins', sans-serif;
    }

    .content {
      margin-left: 260px;
      padding: 40px;
      transition: all 0.3s ease;
    }

    /* Page Header */
    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
      flex-wrap: wrap;
      gap: 15px;
    }

    .page-header h3 {
      font-weight: 600;
      color: #222;
    }

    .btn-add {
      border-radius: 10px;
      padding: 10px 18px;
      font-weight: 500;
    }

    /* Company Card */
    .company-card {
      border: none;
      border-radius: 16px;
      background: #fff;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
      transition: all 0.3s ease;
      text-align: center;
      padding: 25px 20px;
      height: 100%;
    }

    .company-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 22px rgba(0, 0, 0, 0.12);
    }

    .company-logo {
      width: 90px;
      height: 90px;
      object-fit: cover;
      border-radius: 50%;
      border: 3px solid #fff;
      background: #eee;
      box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.4);
      margin-bottom: 15px;
    }

    .company-card h5 {
      font-weight: 600;
      color: #222;
    }

    .company-card p {
      font-size: 0.9rem;
      color: #555;
      margin-bottom: 5px;
    }

    /* Status Badge */
    .badge {
      font-size: 0.8rem;
      padding: 6px 12px;
      border-radius: 20px;
      margin-top: 5px;
    }

    /* Buttons */
    .btn-action {
      border-radius: 8px;
      font-size: 0.85rem;
      padding: 6px 10px;
      margin: 0 3px;
      transition: all 0.2s ease;
    }

    .btn-action:hover {
      transform: scale(1.08);
    }

    /* Responsive */
    @media (max-width: 992px) {
      .content {
        margin-left: 0;
        padding: 25px;
      }
    }

    @media (max-width: 576px) {
      .page-header {
        flex-direction: column;
        text-align: center;
      }

      .btn-add {
        position: fixed;
        bottom: 25px;
        right: 25px;
        border-radius: 50%;
        padding: 14px 16px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      }

      .btn-add i {
        margin: 0;
      }
    }
  </style>
</head>

<body>
  <%- include('slider.ejs') %>

  <div class="content">
    <div class="page-header">
      <h3><i class="fa fa-building text-primary me-2"></i> Manage Companies</h3>
      <a href="/admin/add_company" class="btn btn-primary btn-add">
        <i class="fa fa-plus me-2"></i> Add Company
      </a>
    </div>

    <div class="row g-4">
      <% for (var i = 0; i < companies.length; i++) { %>
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="company-card">
            <img 
              src="<%= companies[i].company_logo && companies[i].company_logo.trim() !== '' 
                ? '/company_logo/' + companies[i].company_logo 
                : 'https://via.placeholder.com/100x100.png?text=No+Logo' %>" 
              class="company-logo" 
              alt="Company Logo"
            >

            <h5><%= companies[i].company_name %></h5>
            <p><i class="fa fa-briefcase me-1 text-secondary"></i> <%= companies[i].company_type || 'General Business' %></p>
            <p><i class="fa fa-envelope me-1 text-primary"></i> <%= companies[i].hr_email || 'N/A' %></p>
            <p><i class="fa fa-phone me-1 text-success"></i> <%= companies[i].hr_mobile || 'N/A' %></p>

            <span class="badge <%= companies[i].status === 'Approved' ? 'bg-success' : 'bg-secondary' %>">
              <%= companies[i].status || 'Pending' %>
            </span>

            <div class="mt-3">
              <a href="/admin/view_company/<%- companies[i].company_id %>" class="btn btn-info text-white btn-action" title="View">
                <i class="fa fa-eye"></i>
              </a>
              <a href="/admin/edit_company/<%- companies[i].company_id %>" class="btn btn-warning text-white btn-action" title="Edit">
                <i class="fa fa-edit"></i>
              </a>
              <button 
                class="btn btn-danger btn-action" 
                title="Delete"
                onclick="confirmDelete('<%- companies[i].company_id %>', '<%- companies[i].company_name %>')"
              >
                <i class="fa fa-trash"></i>
              </button>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    function confirmDelete(id, name) {
      if (confirm(`Are you sure you want to delete "${name}"? This action cannot be undone.`)) {
        window.location.href = '/admin/delete_company/' + id;
      }
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
