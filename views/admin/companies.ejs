<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Companies | Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f6f9;
      font-family: 'Poppins', sans-serif;
    }

    .sidebar {
      height: 100vh;
      background-color: #343a40;
      color: #fff;
      padding: 20px;
      position: fixed;
      left: 0;
      top: 0;
      width: 250px;
    }

    .sidebar h4 {
      color: #ffc107;
      margin-bottom: 30px;
      text-align: center;
    }

    .sidebar a {
      color: #fff;
      display: block;
      text-decoration: none;
      margin: 10px 0;
      padding: 8px 12px;
      border-radius: 5px;
      transition: all 0.3s ease;
    }

    .sidebar a:hover,
    .sidebar a.active {
      background-color: #495057;
    }

    .content {
      margin-left: 260px;
      padding: 40px;
    }

    .company-card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }

    .company-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
    }

    .company-logo {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 10px;
      margin-bottom: 10px;
    }

    .badge {
      font-size: 0.8rem;
      padding: 6px 10px;
    }

    .btn-action {
      margin-right: 5px;
    }
  </style>
</head>

<body>
  <%- include('slider.ejs') %>
    <div class="content">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h3><i class="fa fa-building text-primary me-2"></i> Manage Companies</h3>
        <button class="btn btn-primary"><i class="fa fa-plus"></i> Add Company</button>
      </div>

      <div class="row g-4">
        <% for (var i=0; i < companies.length; i++) { %>
          <div class="col-md-4">
            <div class="card company-card text-center p-3">
              <img src="<%= companies[i].company_logo && companies[i].company_logo.trim() !== '' 
          ? '/company_logo/' + companies[i].company_logo 
          : 'https://via.placeholder.com/100x100.png?text=No+Logo' %>" class="company-logo mx-auto" alt="Company Logo"
                style="width:100px; height:100px; border-radius:50%; object-fit:cover;">

              <h5 class="mt-2 mb-1">
                <%= companies[i].company_name %>
              </h5>
              <p class="text-muted mb-1">
                <%= companies[i].company_type || 'General Business' %>
              </p>
              <p class="small">
                <i class="fa fa-envelope me-1 text-primary"></i>
                <%= companies[i].hr_email || 'N/A' %>
              </p>
              <p class="small">
                <i class="fa fa-phone me-1 text-success"></i>
                <%= companies[i].hr_mobile || 'N/A' %>
              </p>

              <span class="badge <%= companies[i].status === 'Approved' ? 'bg-success' : 'bg-secondary' %> mb-2">
                <%= companies[i].status || 'Pending' %>
              </span>

              <div>
                <a href="/admin/view_company/<%- companies[i].company_id %>"><button
                    class="btn btn-sm btn-info text-white btn-action"><i class="fa fa-eye"></i></button></a>
                <a href="/admin/edit_company/<%- companies[i].company_id %>"><button
                    class="btn btn-sm btn-warning btn-action"><i class="fa fa-edit"></i></button></a>
                <a href="/admin/delete_company/<%- companies[i].company_id %>"
                  onclick="return confirmDelete(event, '<%- companies[i].company_name %>')"
                  class="btn btn-sm btn-danger btn-action">
                  <i class="fa fa-trash"></i>
                </a>

                <script>
                  function confirmDelete(event, companyName) {
                    event.preventDefault();
                    const url = event.currentTarget.getAttribute("href");
                    if (confirm(`Are you sure you want to delete "${companyName}"? This action cannot be undone.`)) {
                      window.location.href = url;
                    }
                  }
                </script>

              </div>
            </div>
          </div>
          <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>