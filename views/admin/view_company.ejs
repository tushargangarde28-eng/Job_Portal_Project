<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Company Details | Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f4f6f9;
      font-family: "Poppins", sans-serif;
    }

    .content {
      margin-left: 260px;
      padding: 40px;
    }

    .card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08);
    }

    .company-logo {
      width: 130px;
      height: 130px;
      object-fit: cover;
      border-radius: 50%;
      border: 3px solid #e1e1e1;
      background-color: #fff;
    }

    .company-header {
      display: flex;
      align-items: center;
      gap: 25px;
      flex-wrap: wrap;
    }

    .section-title {
      border-left: 4px solid #007bff;
      padding-left: 10px;
      font-weight: 600;
      margin-bottom: 20px;
    }

    .job-card {
      border-radius: 12px;
      transition: all 0.3s ease;
      background: #fff;
      border: 1px solid #eaeaea;
    }

    .job-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    }

    @media (max-width: 991px) {
      .content {
        margin-left: 0;
        padding: 20px;
      }
    }
  </style>
</head>

<body>
  <!-- Sidebar include -->
  <%- include('slider.ejs') %>

  <div class="content">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
      <h3><i class="fa fa-building text-primary me-2"></i> Company Details</h3>
      <a href="/admin/companies" class="btn btn-secondary">
        <i class="fa fa-arrow-left me-1"></i> Back
      </a>
    </div>

    <!-- Company Info -->
    <div class="card p-4 mb-4">
      <div class="company-header">
        <img 
          src="<%= company[0].company_logo && company[0].company_logo.trim() !== '' 
            ? '/company_logo/' + company[0].company_logo 
            : 'https://via.placeholder.com/120x120.png?text=No+Logo' %>" 
          class="company-logo"
          alt="Company Logo"
        >

        <div>
          <h4 class="fw-bold text-dark mb-1"><%= company[0].company_name %></h4>
          <p class="text-muted mb-1">
            <i class="fa fa-envelope me-2 text-primary"></i> <%= company[0].hr_email %>
          </p>
          <p class="text-muted mb-1">
            <i class="fa fa-phone me-2 text-success"></i> +91 <%= company[0].hr_mobile %>
          </p>
          <p class="text-muted">
            <i class="fa fa-map-marker-alt me-2 text-danger"></i> <%= company[0].company_location %>
          </p>
        </div>
      </div>

      <hr class="my-4">

      <div class="row text-center">
        <div class="col-md-3 mb-3 mb-md-0">
          <h6 class="text-muted">Total Jobs</h6>
          <h4 class="text-primary fw-bold"><%= jobs.length %></h4>
        </div>
        <div class="col-md-3 mb-3 mb-md-0">
          <h6 class="text-muted">Total Applications</h6>
          <h4 class="text-success fw-bold"><%= applications.length %></h4>
        </div>
        <div class="col-md-3 mb-3 mb-md-0">
          <h6 class="text-muted">Active Jobs</h6>
          <h4 class="text-warning fw-bold"><%= jobs.length %></h4>
        </div>
        <div class="col-md-3">
          <h6 class="text-muted">Status</h6>
          <span class="badge bg-success">Active</span>
        </div>
      </div>
    </div>

    <!-- Recent Jobs -->
    <div class="card p-4">
      <h5 class="section-title">
        <i class="fa fa-briefcase me-2"></i> Recent Job Postings
      </h5>

      <div class="row g-4">
        <% if (company && company.length > 0) { %>
          <% company.forEach(function(job) { %>
            <div class="col-md-4">
              <div class="card job-card p-3 h-100">
                <h5 class="fw-semibold mb-2 text-dark"><%= job.job_title %></h5>
                <p class="text-muted small mb-2">
                  <i class="fa fa-tags me-2 text-primary"></i><%= job.skills %>
                </p>
                <p class="small text-secondary mb-2">
                  <i class="fa fa-clock me-2 text-warning"></i><%= job.created_at %>
                </p>
                <p class="small text-muted mb-3">
                  <i class="fa fa-location-dot me-2 text-danger"></i><%= job.company_location %>
                </p>
                <span class="badge bg-info"><%= job.job_type %></span>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col-12 text-center text-muted py-4">
            <i class="fa fa-briefcase fa-2x mb-2"></i>
            <p>No job postings available.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
