<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Jobs | Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f5f6fa;
      font-family: 'Poppins', sans-serif;
    }
    .sidebar {
      position: fixed;
      left: 0;
      top: 0;
      width: 250px;
      height: 100vh;
      background-color: #202124;
      color: white;
      padding-top: 20px;
    }
    .sidebar h4 {
      text-align: center;
      font-weight: 600;
      margin-bottom: 30px;
      color: #fff;
    }
    .sidebar a {
      color: #bbb;
      text-decoration: none;
      display: block;
      padding: 12px 25px;
      font-size: 15px;
      border-left: 3px solid transparent;
      transition: all 0.3s;
    }
    .sidebar a:hover, .sidebar a.active {
      color: #fff;
      background-color: #2c2e33;
      border-left: 3px solid #0d6efd;
    }
    .main-content {
      margin-left: 250px;
      padding: 30px;
    }
    .navbar {
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .search-bar input {
      border-radius: 30px;
      border: 1px solid #ddd;
      padding: 10px 20px;
    }
    .job-card {
      border: none;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.08);
      transition: 0.3s;
    }
    .job-card:hover {
      transform: translateY(-3px);
    }
    .job-status {
      font-size: 0.9rem;
    }
    .btn-action {
      font-size: 0.9rem;
      padding: 5px 10px;
    }
  </style>
</head>
<body>
<%- include('slider.ejs') %>
  <!-- Main Content -->
  <div class="main-content">
    <h2 class="mb-4">Manage Jobs</h2>
    <!-- Job Cards Section -->
    <div class="row" id="jobContainer">

      <% for(var i = 0; i < jobs.length; i++) { %>
      <!-- Job Card Example -->
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card job-card p-3">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h5 class="fw-bold mb-1"><%- jobs[i].job_title %></h5>
              <p class="text-muted mb-1"><i class="bi bi-building"></i><%- jobs[i].company_name %></p>
              <p class="text-muted mb-2"><i class="bi bi-geo-alt"></i><%- jobs[i].company_location %></p>
            </div>
            <span class="badge bg-success job-status">Active</span>
          </div>
          <p class="small text-muted">Posted: <%- jobs[i].created_at %></p>
          <p><%- jobs[i].job_description %></p>
          <div class="d-flex justify-content-end mt-2">
            <a href="/admin/view_job/<%- jobs[i].job_id %>"><button class="btn btn-sm btn-outline-primary btn-action me-2"><i class="bi bi-eye"></i> View</button></a>
            <a href="/admin/edit_job/<%- jobs[i].job_id %>"><button class="btn btn-sm btn-outline-warning btn-action me-2"><i class="bi bi-pencil"></i> Edit</button></a>
<a href="/admin/delete_job/<%- jobs[i].job_id %>" 
   onclick="return confirm('Are you sure you want to delete this job?');">
  <button class="btn btn-sm btn-outline-danger btn-action">
    <i class="bi bi-trash"></i> Delete
  </button>
</a>

            <!-- <a href="/admin/delete_job/<%- jobs[i].job_id %>"><button class="btn btn-sm btn-outline-danger btn-action"><i class="bi bi-trash"></i> Delete</button></a> -->
          </div>
        </div>
      </div>
      <% } %>

    </div>

  </div>

</body>
</html>
