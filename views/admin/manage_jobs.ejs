<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Jobs | Admin Panel</title>

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />

  <style>
    body {
      background-color: #f5f6fa;
      font-family: 'Poppins', sans-serif;
    }

    /* Sidebar */
    .sidebar {
      position: fixed;
      left: 0;
      top: 0;
      width: 250px;
      height: 100vh;
      background-color: #202124;
      color: white;
      padding-top: 20px;
      transition: all 0.3s ease;
      z-index: 1000;
    }

    .sidebar h4 {
      text-align: center;
      font-weight: 600;
      margin-bottom: 30px;
      color: #fff;
    }

    .sidebar a {
      color: #bbb;
      text-decoration: none;
      display: block;
      padding: 12px 25px;
      font-size: 15px;
      border-left: 3px solid transparent;
      transition: all 0.3s;
    }

    .sidebar a:hover,
    .sidebar a.active {
      color: #fff;
      background-color: #2c2e33;
      border-left: 3px solid #0d6efd;
    }

    /* Toggle Button */
    .toggle-btn {
      display: none;
      position: fixed;
      top: 15px;
      left: 15px;
      background-color: #0d6efd;
      color: white;
      border: none;
      border-radius: 6px;
      padding: 8px 12px;
      font-size: 18px;
      z-index: 1100;
    }

    /* Main content */
    .main-content {
      margin-left: 250px;
      padding: 30px;
      transition: all 0.3s ease;
    }

    .navbar {
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    /* Job cards */
    .job-card {
      border: none;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.08);
      transition: 0.3s;
      background-color: white;
    }

    .job-card:hover {
      transform: translateY(-3px);
    }

    .job-status {
      font-size: 0.9rem;
    }

    .btn-action {
      font-size: 0.9rem;
      padding: 5px 10px;
    }

    /* Responsive Design */
    @media (max-width: 992px) {
      .sidebar {
        left: -250px;
      }

      .sidebar.active {
        left: 0;
      }

      .toggle-btn {
        display: block;
      }

      .main-content {
        margin-left: 0;
        padding: 20px;
      }
    }

    @media (max-width: 576px) {
      h2 {
        font-size: 1.3rem;
        text-align: center;
      }
      .job-card h5 {
        font-size: 1rem;
      }
    }
  </style>
</head>

<body>
  <!-- Sidebar -->
  <%- include('slider.ejs') %>

  <!-- Toggle Sidebar Button -->
  <button class="toggle-btn" onclick="toggleSidebar()"><i class="bi bi-list"></i></button>

  <!-- Main Content -->
  <div class="main-content">
    <h2 class="mb-4 fw-bold text-primary"><i class="bi bi-briefcase me-2"></i>Manage Jobs</h2>

    <!-- Job Cards Section -->
    <div class="row" id="jobContainer">
      <% for (var i = 0; i < jobs.length; i++) { %>
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <div class="card job-card p-3">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <h5 class="fw-bold mb-1 text-dark"><%- jobs[i].job_title %></h5>
                <p class="text-muted mb-1"><i class="bi bi-building me-1"></i><%- jobs[i].company_name %></p>
                <p class="text-muted mb-2"><i class="bi bi-geo-alt me-1"></i><%- jobs[i].company_location %></p>
              </div>
              <span class="badge bg-success job-status">Active</span>
            </div>

            <p class="small text-muted">Posted: <%- jobs[i].created_at %></p>
            <p class="text-secondary"><%- jobs[i].job_description %></p>

            <div class="d-flex justify-content-end mt-2">
              <a href="/admin/view_job/<%- jobs[i].job_id %>">
                <button class="btn btn-sm btn-outline-primary btn-action me-2">
                  <i class="bi bi-eye"></i> View
                </button>
              </a>

              <a href="/admin/edit_job/<%- jobs[i].job_id %>">
                <button class="btn btn-sm btn-outline-warning btn-action me-2">
                  <i class="bi bi-pencil"></i> Edit
                </button>
              </a>

              <a href="/admin/delete_job/<%- jobs[i].job_id %>"
                 onclick="return confirm('Are you sure you want to delete this job?');">
                <button class="btn btn-sm btn-outline-danger btn-action">
                  <i class="bi bi-trash"></i> Delete
                </button>
              </a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    function toggleSidebar() {
      document.querySelector('.sidebar').classList.toggle('active');
    }
  </script>
</body>
</html>
