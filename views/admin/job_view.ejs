<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Job Details | Admin Panel</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f5f7fa;
      font-family: 'Poppins', sans-serif;
    }

    /* Main content layout */
    .content {
      margin-left: 260px;
      padding: 40px;
      transition: all 0.3s ease;
    }

    /* Responsive fix for mobile view */
    @media (max-width: 991px) {
      .content {
        margin-left: 0;
        padding: 20px;
      }
      .job-header {
        flex-direction: column;
        align-items: flex-start !important;
        text-align: left;
      }
      .job-header h3 {
        font-size: 1.4rem;
      }
      .badge {
        margin-top: 10px;
        align-self: flex-start;
      }
    }

    .job-card {
      border: none;
      border-radius: 18px;
      box-shadow: 0 6px 16px rgba(0,0,0,0.08);
      background: #fff;
      overflow: hidden;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .job-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.12);
    }

    .job-header {
      background: linear-gradient(135deg, #007bff, #00c6ff);
      color: white;
      padding: 30px;
    }

    .job-header h3 {
      margin-bottom: 5px;
      font-weight: 600;
    }

    .badge {
      font-size: 0.85rem;
      padding: 6px 12px;
      border-radius: 10px;
    }

    .job-body {
      padding: 30px;
    }

    .info-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
      gap: 20px;
    }

    .info-box {
      background: #f9fafc;
      border-radius: 12px;
      padding: 15px 20px;
      border-left: 4px solid #007bff;
      transition: all 0.2s ease;
    }

    .info-box:hover {
      background: #eef3ff;
      transform: scale(1.02);
    }

    .info-box i {
      color: #007bff;
      margin-right: 8px;
    }

    .info-title {
      font-size: 0.9rem;
      color: #6c757d;
    }

    .info-value {
      font-size: 1.05rem;
      font-weight: 600;
      color: #212529;
    }

    .job-desc {
      background: #fff;
      border-radius: 12px;
      padding: 20px;
      border-left: 5px solid #0d6efd;
      margin-top: 30px;
    }

    .job-desc h5, .job-desc h6 {
      font-weight: 600;
    }

    .job-desc p {
      line-height: 1.7;
    }

    @media (max-width: 576px) {
      .info-grid {
        grid-template-columns: 1fr;
      }
      .info-value {
        font-size: 1rem;
      }
      .job-body {
        padding: 20px;
      }
      .job-desc {
        margin-top: 20px;
        padding: 15px;
      }
    }
  </style>
</head>
<body>

  <%- include('slider.ejs') %>

  <div class="content">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
      <h3 class="mb-2 mb-md-0">
        <i class="fa fa-briefcase text-primary me-2"></i> Job Overview
      </h3>
      <a href="/admin/manage_jobs" class="btn btn-outline-secondary btn-sm">
        <i class="fa fa-arrow-left me-2"></i> Back
      </a>
    </div>

    <div class="job-card">
      <!-- Header -->
      <div class="job-header d-flex justify-content-between align-items-center flex-wrap">
        <div>
          <h3><%= job[0].job_title %></h3>
          <p class="mb-0">
            <i class="fa fa-building me-2"></i>
            Company: <%= job[0].company_name %>
          </p>
        </div>
        <span class="badge <%= job[0].status === 'Active' ? 'bg-success' : 'bg-danger' %>">
          <%= job[0].status %>
        </span>
      </div>

      <!-- Body -->
      <div class="job-body">
        <div class="info-grid">
          <div class="info-box">
            <div class="info-title"><i class="fa fa-layer-group"></i>Category</div>
            <div class="info-value"><%= job[0].job_category || '—' %></div>
          </div>

          <div class="info-box">
            <div class="info-title"><i class="fa fa-clock"></i>Job Type</div>
            <div class="info-value"><%= job[0].job_type || '—' %></div>
          </div>

          <div class="info-box">
            <div class="info-title"><i class="fa fa-user-tie"></i>Experience</div>
            <div class="info-value"><%= job[0].experience_min %> - <%= job[0].experience_max %> yrs</div>
          </div>

          <div class="info-box">
            <div class="info-title"><i class="fa fa-users"></i>Vacancies</div>
            <div class="info-value"><%= job[0].vacancies %></div>
          </div>

          <div class="info-box">
            <div class="info-title"><i class="fa fa-link"></i>Reference</div>
            <div class="info-value">
              <% if (job[0].reference_link) { %>
                <a href="<%= job[0].reference_link %>" target="_blank" class="text-decoration-none text-primary">
                  View Link
                </a>
              <% } else { %>
                <span class="text-muted">Not available</span>
              <% } %>
            </div>
          </div>

          <div class="info-box">
            <div class="info-title"><i class="fa fa-calendar-plus"></i>Created</div>
            <div class="info-value"><%= new Date(job[0].created_at).toLocaleDateString('en-IN', { day:'2-digit', month:'short', year:'numeric' }) %></div>
          </div>
        </div>

        <div class="job-desc mt-4">
          <h5><i class="fa fa-file-alt text-primary me-2"></i>Job Description</h5>
          <p class="text-secondary"><%= job[0].job_description || 'No description available.' %></p>
          <hr>
          <h6><i class="fa fa-code text-primary me-2"></i>Required Skills</h6>
          <p class="text-dark fw-semibold"><%= job[0].skills || 'N/A' %></p>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
