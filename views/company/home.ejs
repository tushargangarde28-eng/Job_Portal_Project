<%- include("navbar.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%- companies[0].company_name %> | Job Portal</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    /* Hero Section */
    .hero {
      background: linear-gradient(135deg, #0d6efd, #6610f2);
      color: white;
      padding: 80px 0;
    }
    .hero h1 {
      font-size: 2.8rem;
      font-weight: 700;
    }
    .hero p {
      font-size: 1.1rem;
      opacity: 0.9;
    }
    .job-card {
      border: none;
      border-radius: 10px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .job-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }
    .section-title {
      font-weight: 700;
      margin-bottom: 2rem;
      text-align: center;
    }
    /* Stats Section */
    .stats {
      background-color: #f8f9fa;
      padding: 60px 0;
    }
    .stat-box {
      background: white;
      border-radius: 10px;
      padding: 25px;
      box-shadow: 0 3px 12px rgba(0,0,0,0.05);
      transition: all 0.3s ease;
    }
    .stat-box:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 20px rgba(0,0,0,0.08);
    }
    /* Testimonials */
    .testimonial {
      background: white;
      border-left: 4px solid #0d6efd;
      padding: 25px;
      border-radius: 8px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.05);
    }
    /* CTA */
    .cta {
      background: linear-gradient(135deg, #0d6efd, #198754);
      color: white;
      padding: 60px 0;
      text-align: center;
      border-radius: 0;
    }
  </style>
</head>
<body>

<!-- Hero Section -->
<section class="hero text-center">
  <div class="container">
    <img src="<%- companies[0].company_logo ? '/company_logo/' + companies[0].company_logo : '/images/company-placeholder.png' %>" alt="Company Logo" class="rounded-circle mb-3" style="width:90px; height:90px; object-fit:cover;">
    <h1><%- companies[0].company_name %></h1>
    <p>Empowering growth through opportunity â€” hire top talent and manage your hiring journey efficiently.</p>
    <!-- <a href="/company/post_job" class="btn btn-light btn-lg mt-3">Post a Job</a> -->
  </div>
</section>

<!-- Company Stats -->
<section class="stats text-center">
  <div class="container">
    <h2 class="section-title">Company at a Glance</h2>
    <div class="row g-4">
      <div class="col-md-4">
        <div class="stat-box">
          <i class="bi bi-briefcase-fill text-primary fs-1 mb-2"></i>
          <h3 class="fw-bold"> <%= jobs.length %> </h3>
          <p class="text-muted">Jobs Posted</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="stat-box">
          <i class="bi bi-person-lines-fill text-success fs-1 mb-2"></i>
          <h3 class="fw-bold"><%= applications.length %></h3>
          <p class="text-muted">Applications Received</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="stat-box">
          <i class="bi bi-person-check-fill text-info fs-1 mb-2"></i>
          <h3 class="fw-bold"><%= applications && applications.length > 0 ? applications.filter(function(app){return app.status==='shortlisted'}).length : 0 %></h3>
          <p class="text-muted">Shortlisted Candidates</p>
  </div>
</div>

  </div>
</section>

<!-- Job Listings -->
<section class="py-5">
  <div class="container">
    <h2 class="section-title">Recently Posted Jobs</h2>

    <div class="row g-4">
      <% if (jobs && jobs.length > 0) { %>
        <% jobs.slice(0, 3).forEach(job => { %>
          <div class="col-md-6 col-lg-4">
            <div class="card job-card p-4 shadow-sm">
              <h5 class="fw-bold mb-2"><%- job.job_title %></h5>
              <span class="badge bg-primary mb-2"><%- job.job_type %></span>
              <p class="text-muted small mb-1"><strong>Skills:</strong> <%- job.skills %></p>
              <p class="text-muted small mb-3"><strong>Experience:</strong> <%- job.experience_max %> years</p>
              <a href="/company/jobs/<%- job.job_id %>" class="btn btn-outline-primary btn-sm">View Details</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12 text-center">
          <div class="p-5 bg-light rounded-4">
            <h5 class="text-muted mb-3">No Jobs Posted Yet</h5>
            <p class="text-secondary">Start attracting top talent by posting your first job listing.</p>
            <a href="/company/post_job" class="btn btn-success btn-lg">Post Your First Job</a>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</section>
<!-- Call to Action -->
<section class="cta">
  <div class="container">
    <h2 class="fw-bold mb-3">Ready to Find Your Next Great Hire?</h2>
    <p class="mb-4">Post jobs, review applications, and manage everything in one place.</p>
    <a href="/company/post_job" class="btn btn-light btn-lg px-5">Post a Job Now</a>
  </div>
</section>

<%- include("footer.ejs") %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
