<%- include("navbar.ejs") %>

<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">
      <i class="bi bi-briefcase-fill me-2"></i>My Posted Jobs
    </h2>
    <a href="/company/post_job" class="btn btn-primary">
      <i class="bi bi-plus-circle me-1"></i>Post New Job
    </a>
  </div>

  <% if (jobs.length === 0) { %>
    <div class="alert alert-info shadow-sm text-center py-4">
      <i class="bi bi-info-circle me-2"></i>
      You haven't posted any jobs yet.
      <a href="/company/post_job" class="fw-semibold text-decoration-none text-primary">Post one now</a>.
    </div>
  <% } else { %>
    <div class="row g-4">
      <% jobs.forEach(job => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card border-0 shadow-sm h-100 job-card">
            <div class="card-body d-flex flex-column p-4">
              
              <!-- Job Title -->
              <h5 class="card-title fw-bold mb-2 text-dark"><%= job.job_title %></h5>
              <p class="text-muted small mb-2">
                <i class="bi bi-briefcase-fill me-1"></i><%= job.job_type %> | <%= job.job_category %>
              </p>
              <p class="text-muted small mb-3">
                <i class="bi bi-geo-alt-fill me-1"></i><%= job.location || "Remote" %>
              </p>

              <!-- Details -->
              <div class="border-top pt-3 mt-auto small text-muted">
                <p class="mb-1">
                  <strong>Experience:</strong> <%= job.experience_min %> - <%= job.experience_max %> yrs
                </p>
                <p class="mb-3">
                  <strong>Vacancies:</strong> <%= job.vacancies %>
                </p>

                <!-- Buttons -->
                <div class="d-flex flex-wrap gap-2">
                  <a href="/company/jobs/<%= job.job_id %>" class="btn btn-outline-primary btn-sm flex-grow-1">
                    <i class="bi bi-eye"></i> View
                  </a>
                  <a href="/company/jobs/<%= job.job_id %>/edit" class="btn btn-outline-secondary btn-sm flex-grow-1">
                    <i class="bi bi-pencil-square"></i> Edit
                  </a>
                  <a href="/company/jobs/<%= job.job_id %>/applications" class="btn btn-outline-success btn-sm flex-grow-1">
                    <i class="bi bi-people-fill"></i> Applicants
                  </a>
                  <form action="/company/jobs/<%= job.job_id %>/delete" method="POST" class="d-inline w-100">
                    <button type="submit" class="btn btn-outline-danger btn-sm w-100" 
                      onclick="return confirm('Are you sure you want to delete this job?');">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

<%- include("footer.ejs") %>

<!-- Optional Custom Styles -->
<style>
  .job-card {
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    border-radius: 1rem;
  }
  .job-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.08);
  }
  .btn-sm i {
    vertical-align: middle;
  }
</style>
