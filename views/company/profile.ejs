<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Company Profile - Job Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-color: #f8f9fa;
    }
    .profile-card {
      border-radius: 1rem;
      overflow: hidden;
    }
    .profile-header {
      background: linear-gradient(135deg, #007bff, #00a2ff);
      color: white;
      text-align: center;
      padding: 3rem 1rem 5rem; /* extra padding for logo */
      position: relative;
    }
    .profile-img {
      width: 120px;
      height: 120px;
      object-fit: cover;
      border-radius: 50%;
      border: 4px solid #fff;
      position: absolute;
      bottom: -60px;
      left: 50%;
      transform: translateX(-50%);
      background-color: #fff;
    }
  </style>
</head>
<body>
<%- include("navbar.ejs") %>

<!-- Profile Content -->
<div class="container mt-5">
  <div class="card shadow profile-card">
    <div class="profile-header">
      <h2 class="fw-bold">Company Profile</h2>
      <p class="mb-0">Manage your company details</p>

      <!-- Company Logo -->
       <img src="<%= companies[0].company_logo && companies[0].company_logo.trim() !== '' 
    ? '/company_logo/' + companies[0].company_logo 
    : 'https://www.iconpacks.net/icons/2/free-user-icon-3296-thumb.png' %>" 
     alt="Company Logo" 
     class="profile-img shadow-sm">

    </div>

    <div class="card-body text-center mt-5">
      <!-- Company Info -->
      <h4 class="fw-bold text-primary mb-2"><%- companies[0].company_name %></h4>
      <p class="text-muted mb-1">HR Email: <strong><%- companies[0].hr_email %></strong></p>
      <p class="text-muted mb-1">Phone: <strong><%- companies[0].hr_mobile %></strong></p>
      <p class="text-muted">Location: <strong><%- companies[0].company_location %></strong></p>

      <hr>

      <div class="text-start px-4">
        <h5 class="fw-semibold">About Company</h5>
        <p class="text-secondary">
          <%= companies[0].about_company || 'No description available.' %>
        </p>

        <h5 class="fw-semibold mt-4">Company Details</h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Headquarters:</strong> <%- companies[0].company_location %></li>
          <li class="list-group-item"><strong>Status:</strong> <%- companies[0].status %></li>
        </ul>
      </div>

      <div class="mt-4">
        <a href="/company/edit_profile" class="btn btn-primary px-4">Edit Profile</a>
      </div>
    </div>
  </div>
</div>

<%- include("footer.ejs") %>
</body>
</html>
