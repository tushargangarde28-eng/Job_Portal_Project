<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Job Applications - Dashboard</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
<style>
  body { background-color: #f5f6fa; }

  .application-card {
    border-radius: 1rem;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    margin-bottom: 1.5rem;
    background-color: #fff;
    padding: 1.2rem;
  }
  .application-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.1);
  }
  .avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
  }
  .status-badge { border-radius: 50px; padding: 0.5em 0.8em; font-size: 0.85rem; }
  .btn-rounded { border-radius: 50px; padding: 0.35em 0.8em; font-size: 0.85rem; }
  .card-header-job {
    font-size: 0.85rem;
    font-weight: 600;
    color: #6c757d;
  }
</style>
</head>
<body>

<%- include("navbar.ejs") %>

<div class="container my-5">
  <h3 class="mb-4 fw-bold">Job Applications</h3>

  <% if(applications.length === 0){ %>
    <div class="text-center py-5 text-muted">
      <i class="bi bi-inbox fs-1 mb-2"></i>
      <p class="fs-5">No applications found for your jobs.</p>
    </div>
  <% } else { %>
    <div class="row">
      <% applications.forEach((app) => { %>
        <div class="col-md-6 col-lg-4">
          <div class="application-card shadow-sm">
            <div class="d-flex align-items-center mb-3">
              <img src="https://www.iconpacks.net/icons/2/free-user-icon-3296-thumb.png" class="avatar me-3" alt="Applicant">
              <div>
                <h5 class="fw-bold mb-1"><%= app.employee_name %></h5>
                <small class="text-muted"><i class="bi bi-envelope me-1"></i><%= app.employee_email %></small><br>
                <small class="text-muted"><i class="bi bi-telephone me-1"></i><%= app.employee_mobile %></small>
              </div>
            </div>

            <p class="mb-1 card-header-job"><i class="bi bi-briefcase me-1"></i> <%= app.job_title %></p>
            <p class="mb-1 card-header-job"><i class="bi bi-calendar-check me-1"></i> Applied on: <%= new Date(app.created_at).toLocaleDateString('en-GB', { day:'2-digit', month:'short', year:'numeric' }) %></p>

            <p class="mb-3">
              <% if(app.status === "pending"){ %>
                <span class="badge bg-warning text-dark status-badge">Pending</span>
              <% } else if(app.status === "shortlisted"){ %>
                <span class="badge bg-success status-badge">Shortlisted</span>
              <% } else if(app.status === "rejected"){ %>
                <span class="badge bg-danger status-badge">Rejected</span>
              <% } %>
            </p>

            <div class="d-flex justify-content-between flex-wrap">
              <% if(app.resume_file){ %>
                <a href="/employee_resume/<%= app.resume_file %>" download class="btn btn-sm btn-outline-info btn-rounded mb-2">
                  <i class="bi bi-file-earmark-text me-1"></i>Resume
                </a>
              <% } %>

              <% if(app.status === "pending"){ %>
                <a href="/company/applications/<%= app.application_id %>/shortlist" class="btn btn-sm btn-outline-success btn-rounded me-1 mb-2">
                  <i class="bi bi-check2-circle me-1"></i>Shortlist
                </a>
                <a href="/company/applications/<%= app.application_id %>/reject" class="btn btn-sm btn-outline-danger btn-rounded mb-2">
                  <i class="bi bi-x-circle me-1"></i>Reject
                </a>
              <% } else if(app.status === "shortlisted"){ %>
                <span class="badge bg-success status-badge mb-2">Shortlisted ✅</span>
              <% } else if(app.status === "rejected"){ %>
                <span class="badge bg-danger status-badge mb-2">Rejected ❌</span>
              <% } %>
            </div>

          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
