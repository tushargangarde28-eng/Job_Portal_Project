<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Applications | Job Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>

<%- include('navbar.ejs') %>

<!-- Applications Section -->
<div class="container my-5">
  <h3 class="fw-bold mb-4 text-center text-primary">My Applications</h3>

  <% if (applications.length > 0) { %>
    <div class="row">
      <% for (var i = 0; i < applications.length; i++) { %>
        <div class="col-md-6 mb-4">
          <div class="card shadow-sm border-0 rounded-4 h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <h5 class="card-title fw-bold mb-1"><%- applications[i].job_title %></h5>
                  <p class="text-muted mb-1">
                    <i class="bi bi-building me-1"></i>
                    <%- applications[i].company_name %>
                  </p>
                  <p class="small text-muted mb-2">
                    <i class="bi bi-geo-alt me-1"></i>
                    <%- applications[i].company_location || 'Location not specified' %>
                  </p>

                  <% if (applications[i].skills) { %>
                    <span class="badge bg-primary me-2"><%- applications[i].skills %></span>
                  <% } %>
                </div>

                <div class="text-end">
                  <span class="badge bg-info text-dark mb-2">
                    <%- new Date(applications[i].created_at).toLocaleDateString() %>
                  </span><br>
                  <span class="badge 
                    <%= applications[i].status === 'pending' ? 'bg-warning text-dark' : 
                        applications[i].status === 'rejected' ? 'bg-danger' :
                        applications[i].status === 'shortlisted' ? 'bg-success' : 
                        'bg-danger' %>">
                    <%- applications[i].status %>
                  </span>
                </div>
              </div>

              <hr>
              <div class="d-flex justify-content-between align-items-center mt-2">
                <!-- <a href="/job/<%- applications[i].job_id %>" class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-eye me-1"></i> View Job
                </a> -->
                <a href="/employee_resume/<%- applications[i].resume_file %>" target="_blank" class="btn btn-sm btn-outline-secondary">
                  <i class="bi bi-file-earmark-pdf me-1"></i> View Resume
                </a>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  <% } else { %>
    <!-- No Applications -->
    <div class="text-center py-5 text-muted">
      <i class="bi bi-folder-x fs-1 mb-3"></i>
      <p>No job applications found.</p>
    </div>
  <% } %>

</div>

<%- include('footer.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
