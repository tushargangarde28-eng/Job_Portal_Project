<%- include("navbar.ejs") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm border-0">
        <div class="card-body p-4">

          <h4 class="fw-bold text-primary mb-4"><i class="bi bi-lightning-charge me-1"></i> Employee Skills</h4>

          <form action="/employee/save_skills" method="POST">
            <!-- Skill Name Input -->
            <div class="mb-3">
              <label class="form-label fw-semibold">Skill Name</label>
              <input type="text" name="skill_name[]" class="form-control mb-2" placeholder="Enter Skill" required>
            </div>

            <!-- Add More Skills Button -->
            <div class="mb-3">
              <button type="button" id="addSkill" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-plus-circle me-1"></i> Add Another Skill
              </button>
            </div>

            <!-- Submit Button -->
            <div class="text-end">
              <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-save me-1"></i> Save Skills
              </button>
              <a href="/employee/profile" class="btn btn-outline-secondary px-4 ms-2">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to Profile
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Add more skill input dynamically
  document.getElementById('addSkill').addEventListener('click', function() {
    const skillInput = document.createElement('input');
    skillInput.type = 'text';
    skillInput.name = 'skill_name[]';
    skillInput.required = true;
    skillInput.className = 'form-control mb-2';
    skillInput.placeholder = 'Enter Skill';
    this.parentNode.insertBefore(skillInput, this);
  });
</script>
