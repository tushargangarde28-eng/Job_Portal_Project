<%- include("navbar.ejs") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm border-0">
        <div class="card-body p-4">
          <h4 class="fw-bold text-primary mb-4">
            <i class="bi bi-pencil-square me-1"></i> Edit Education
          </h4>

          <form action="/employee/update_education" method="POST">
            <input type="hidden" name="education_id" value="<%- education.education_id %>">

            <div class="mb-3">
              <label class="form-label fw-semibold">College Name</label>
              <input type="text" name="college_name" value="<%- education.college_name %>" class="form-control" required>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Course Title</label>
              <input type="text" name="course_title" value="<%- education.course_title %>" class="form-control" required>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Passing Year</label>
              <input type="text" name="passing_year" value="<%- education.passing_year %>" class="form-control" required>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Marks</label>
              <input type="text" name="marks" value="<%- education.marks %>" class="form-control" required>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Status</label>
              <select name="status" class="form-select">
                <option <%= education.status === 'Appearing' ? 'selected' : '' %>>Appearing</option>
                <option <%= education.status === 'Complete' ? 'selected' : '' %>>Complete</option>
              </select>
            </div>

            <div class="text-end">
              <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-save me-1"></i> Update
              </button>
              <a href="/employee/profile" class="btn btn-outline-secondary px-4 ms-2">
                <i class="bi bi-arrow-left-circle me-1"></i> Back
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
