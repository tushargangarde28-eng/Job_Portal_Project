<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Browse Jobs | Job Portal</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Poppins', sans-serif;
    }

    .job-card {
      border: none;
      border-radius: 1rem;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      transition: all 0.3s ease;
      overflow: hidden;
      background: #fff;
    }

    .job-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
    }

    .card-body {
      padding: 1.5rem;
    }

    .job-title {
      color: #0d6efd;
      font-weight: 600;
    }

    .badge-skill {
      background-color: #0d6efd;
      font-size: 0.75rem;
      border-radius: 0.5rem;
      padding: 0.4em 0.6em;
    }

    .btn-save {
      color: #6c757d;
      border-color: #6c757d;
      transition: all 0.2s ease;
    }

    .btn-save:hover {
      background-color: #6c757d;
      color: #fff;
    }

    .btn-apply {
      color: #0d6efd;
      border-color: #0d6efd;
      transition: all 0.2s ease;
    }

    .btn-apply:hover {
      background-color: #0d6efd;
      color: #fff;
    }

    .btn-applied {
      background-color: #adb5bd;
      color: #fff;
      border: none;
      cursor: not-allowed;
    }

    .text-muted small {
      font-size: 0.85rem;
    }
  </style>
</head>

<body>
  <%- include('navbar.ejs') %>

  <div class="container my-5">
    <h3 class="fw-bold mb-4 text-center text-primary">Browse Available Jobs</h3>

    <div class="row g-4">
      <% for (var i = 0; i < jobs.length; i++) { %>
        <div class="col-md-6">
          <div class="card job-card h-100">
            <div class="card-body d-flex flex-column justify-content-between">

              <div>
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <div>
                    <h5 class="job-title mb-1"><%- jobs[i].job_title %></h5>
                    <p class="text-muted small mb-1"><i class="bi bi-building me-1"></i><%- jobs[i].company_name || "TechNova Pvt. Ltd." %></p>
                  </div>
                  <span class="badge bg-primary rounded-pill"><%- jobs[i].job_type %></span>
                </div>

                <p class="text-secondary small mb-3">
                  <%- jobs[i].job_description.substring(0, 90) %>...
                </p>

                <div class="mb-3">
                  <span class="text-muted small d-block mb-1"><i class="bi bi-tools me-1"></i>Skills Required:</span>
                  <span class="badge badge-skill"><%- jobs[i].skills %></span>
                </div>
              </div>

              <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                <small class="text-muted"><i class="bi bi-clock me-1"></i><%- jobs[i].created_at %></small>
                <div class="d-flex">
                  <!-- Save Button -->
                  <a href="/employee/save_job/<%- jobs[i].job_id %>"
                    class="btn btn-save btn-sm me-2">
                    <i class="bi bi-bookmark"></i> Save
                  </a>

                  <!-- Apply / Applied Button -->
                  <% if (jobs[i].applications_count == 0) { %>
                    <button type="button"
                            class="btn btn-apply btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#applyJobModal<%- jobs[i].job_id %>">
                      <i class="bi bi-send"></i> Apply
                    </button>
                  <% } else { %>
                    <button type="button"
                            class="btn btn-applied btn-sm"
                            disabled>
                      <i class="bi bi-check-circle"></i> Applied
                    </button>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Apply Modal -->
        <div class="modal fade" id="applyJobModal<%- jobs[i].job_id %>" tabindex="-1" aria-labelledby="applyJobModalLabel<%- jobs[i].job_id %>" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
              <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Apply for <%- jobs[i].job_title %></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <form action="/employee/apply/<%- jobs[i].job_id %>" method="POST" enctype="multipart/form-data">
                  <div class="mb-3">
                    <label class="form-label fw-semibold">Upload Resume (PDF only)</label>
                    <input type="file" class="form-control" name="employee_resume" accept=".pdf" required>
                  </div>
                  <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                      <i class="bi bi-upload me-1"></i> Submit Application
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('footer.ejs') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
